FROM node:18-alpine

WORKDIR /app

# Copy package.json and package-lock.json
COPY package*.json ./

# Install dependencies
RUN npm install \
    && npm install -g uuid jsonwebtoken \
    && npm install --save uuid jsonwebtoken \
    && npm install -D tailwindcss postcss autoprefixer

# Next.js telemetry
ENV NEXT_TELEMETRY_DISABLED=1

# Set environment variables for development
ENV PORT=3000
ENV HOSTNAME="0.0.0.0"
ENV NODE_ENV=development
ENV AUTH_SECRET=development-auth-secret

# We don't copy the project here since we're mounting it in docker-compose
# This keeps only package.json and installed dependencies in the image

# Verbose logging for troubleshooting
RUN ls -la
RUN ls -la src/components/admin/sites || echo "sites directory not found"

# Expose port
EXPOSE 3000

# Start development server
CMD ["npm", "run", "dev"]
