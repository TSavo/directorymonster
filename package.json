{
  "name": "directorymonster",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test-generator": "node test-generator/index.js",
    "test-handlebars": "node test-generator/test-handlebars.js",
    "test:typescript": "node test-generator/test-handlebars.js",
    "compile-ts": "tsc",
    "test-template": "tsc test-template-method.ts --outDir ./dist --downlevelIteration --esModuleInterop --target es2022 --module es2022 --skipLibCheck && node dist/test-template-method.js",
    "test:watch": "jest --watch",
    "test:components": "jest \"tests/admin/**/*.test.tsx\"",
    "test:components:watch": "jest \"tests/admin/**/*.test.tsx\" --watch",
    "test:components:coverage": "jest \"tests/admin/**/*.test.tsx\" --coverage",
    "test:api": "jest \"tests/api/**/*.test.ts\"",
    "test:unit": "jest \"tests/unit/**/*.test.ts\"",
    "test:integration": "jest \"tests/integration/**/*.test.ts\" \"tests/multitenancy-integration.test.ts\" \"tests/page-rendering.test.ts\"",
    "test:components:categories": "jest \"tests/admin/categories/**/*.test.tsx\"",
    "test:components:listings": "jest \"tests/admin/listings/**/*.test.tsx\"",
    "test:domain": "bash scripts/test-domain-resolution.sh",
    "test:multitenancy": "bash scripts/test-multitenancy-comprehensive.sh",
    "test:rendering": "bash scripts/test-comprehensive-rendering.sh",
    "test:all": "npm run test:components && npm run test:api && npm run test:unit && npm run test:integration && npm run test:domain && npm run test:multitenancy && npm run test:rendering",
    "test:docker": "bash scripts/docker-test-suite.sh",
    "test:coverage": "jest --config=jest.coverage.config.js",
    "test:integration:coverage": "jest \"tests/integration/.*\\.test\\.ts\" --config=jest.coverage.config.js",
    "test:docker:coverage": "bash scripts/docker-coverage-test.sh",
    "test:docker:coverage:ci": "docker-compose -f docker-compose.test.yml up --exit-code-from app -d && docker-compose -f docker-compose.test.yml exec -T app npm run test:coverage",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "docker:build": "docker-compose build",
    "docker:build:python": "docker build -t directorymonster-python -f Dockerfile.python .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "seed": "bash scripts/run-seed.sh",
    "seed:js": "node seed-script.js",
    "seed:docker": "bash scripts/run-seed-docker.sh",
    "test:with-seed": "npm run seed && npm run test",
    "test:with-seed:docker": "npm run seed:docker && npm run test",
    "test:all-with-seed": "npm run seed && npm run test:all",
    "test:all-with-seed:docker": "npm run seed:docker && npm run test:all",
    "test:with-server": "bash scripts/run-tests-with-server.sh"
  },
  "dependencies": {
    "@testing-library/user-event": "^14.6.1",
    "axios": "^1.8.4",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.484.0",
    "next": "^14.0.0",
    "node-fetch": "^3.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^20.8.10",
    "@types/react": "^18.2.33",
    "@types/react-dom": "^18.2.14",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.52.0",
    "eslint-config-next": "^14.0.0",
    "handlebars": "^4.7.8",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.3.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}