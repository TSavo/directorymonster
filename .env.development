# Environment variables for development
NODE_ENV=development
PORT=3000
HOSTNAME=0.0.0.0
BASE_URL=http://localhost:3000
REDIS_URL=redis://redis:6379
AUTH_SECRET=development-auth-secret

# File watching settings for Docker
WATCHPACK_POLLING=true
CHOKIDAR_USEPOLLING=true
CHOKIDAR_INTERVAL=1000

# Debug and development settings
DEBUG_LEVEL=verbose

# Redis connection settings
REDIS_CONNECT_TIMEOUT=15000
REDIS_KEEPALIVE_INTERVAL=30000
REDIS_MAX_RECONNECT_ATTEMPTS=20
REDIS_RECONNECT_INTERVAL_MS=3000 
REDIS_MAX_RECONNECT_INTERVAL_MS=20000

# Enable memory fallback for tests to work around ioredis loading issues
USE_MEMORY_FALLBACK=true
