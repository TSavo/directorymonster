{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "./dist",
    "declaration": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "emitDeclarationOnly": false
  },
  "include": ["test-generator/Core/HandlebarsEngine.ts", "test-generator/Core/Config.ts", "test-generator/Core/Template.ts", "test-generator/Utils/FileSystem.ts"],
  "exclude": ["node_modules", "dist"]
}